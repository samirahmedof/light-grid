{
  "name": "light-grid",
  "version": "2.1.1",
  "description": "A lightweight, responsive, Sass-based CSS grid and utility system inspired by Bootstrap but optimized for speed and flexibility.",
  "main": "dist/lightgrid.css",
  "style": "dist/lightgrid.css",
  "exports": {
    ".": {
      "default": "./dist/lightgrid.css",
      "sass": "./dist/_index.scss"
    },
    "./" : {
      "sass" : "./*"
    }
  },
  "scripts": {
    "dev": "vite",
    "build:dist": "sass index.scss dist/lightgrid.css && npx postcss dist/lightgrid.css -o dist/lightgrid.min.css",
    "copy:scss": "mkdir dist 2>nul || true && copy index.scss dist\\_index.scss",
    "build:scss": "sed 's/@use \"core\\//@use \"..\\/core\\//g; s/@use \"layout\\//@use \"..\\/layout\\//g; s/@use \"utilities\\//@use \"..\\/utilities\\//g' index.scss > dist/_index.scss",
    "watch": "sass --watch index.scss demo/lightgrid.css",
    "build": "npm run build:dist && npm run copy:scss && npm run build:scss"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/samirahmedof/light-grid"
  },
  "keywords": [
    "css",
    "grid",
    "sass",
    "responsive",
    "framework",
    "lightweight",
    "utilities",
    "layout"
  ],
  "author": "Samir Ahmadov",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/samirahmedof/light-grid/issues"
  },
  "files": [
    "dist",
    "core",
    "layout",
    "utilities",
    "index.scss",
    "README.md"
  ],
  "homepage": "https://github.com/samirahmedof/grid#readme",
  "devDependencies": {
    "@types/node": "^24.9.1",
    "autoprefixer": "^10.4.21",
    "cssnano": "^7.1.1",
    "postcss": "^8.5.6",
    "postcss-cli": "^11.0.1",
    "sass": "^1.93.2",
    "tsx": "^4.20.6",
    "typescript": "^5.9.3",
    "vite": "^7.1.12"
  }
}
